{
  "id": "refactor",
  "name": "Num Refactor",
  "description": "Refactor code for better structure and maintainability",
  "tags": ["refactor", "clean-code", "architecture"],
  "runtimePolicy": {
    "model": {
      "preferred": { "provider": "openai", "model": "gpt-4.1" }
    },
    "budget": { "maxCostUsd": 5 }
  },
  "flow": {
    "version": "1",
    "nodes": [
      {
        "id": "plan",
        "role": "planner",
        "goal": "Analyze code and plan refactoring strategy",
        "expectedSchema": "multiPlan",
        "prompt": {
          "system": "You are a software architect. Identify code smells, design issues, and plan refactoring steps.",
          "user": "Plan refactoring for:\n{{task.goal}}\n\nContext:\n{{task.context | json}}"
        }
      },
      {
        "id": "implement",
        "role": "implementer",
        "goal": "Implement the refactoring",
        "expectedSchema": "patchCandidate",
        "prompt": {
          "system": "You are a senior developer. Refactor the code while preserving behavior. Use SOLID principles.",
          "user": "Refactor based on plan:\n{{artifacts.plan | json}}"
        }
      },
      {
        "id": "review",
        "role": "reviewer",
        "goal": "Review refactoring for correctness",
        "expectedSchema": "reviewReport",
        "prompt": {
          "system": "You are a code reviewer. Verify the refactoring preserves behavior and improves quality.",
          "user": "Review this refactoring:\n{{artifacts.patchCandidate.patch}}"
        }
      }
    ],
    "edges": [
      { "from": "plan", "to": "implement" },
      { "from": "implement", "to": "review" }
    ]
  }
}
